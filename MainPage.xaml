<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeuTempo.MainPage"
             BackgroundColor="#121212"
             Padding="20">

    <ScrollView>
        <VerticalStackLayout Spacing="25">

            <!-- Título -->
            <Label Text="🌤️ MeuTempo"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center" />

            <!-- Entrada de cidade + botão -->
            <HorizontalStackLayout Spacing="10">
                <Entry x:Name="CidadeEntry"
                       Placeholder="Digite sua cidade"
                       BackgroundColor="#1E1E1E"
                       TextColor="White"
                       PlaceholderColor="#888"
                       HeightRequest="40"
                       HorizontalOptions="FillAndExpand"
                       Keyboard="Text" />
                <Button Text="Buscar"
                        Clicked="OnBuscarClima"
                        BackgroundColor="#03DAC6"
                        TextColor="Black"
                        CornerRadius="10"
                        HeightRequest="40" />
            </HorizontalStackLayout>

            <!-- Resultado -->
            <Frame x:Name="ResultadoFrame"
                   IsVisible="False"
                   Padding="20"
                   BackgroundColor="#1E1E1E"
                   CornerRadius="15"
                   HasShadow="True">

                <VerticalStackLayout Spacing="10">

                    <Label x:Name="CidadeLabel"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />

                    <Image x:Name="IconeClima"
                           HeightRequest="100"
                           WidthRequest="100"
                           HorizontalOptions="Center" />

                    <Label x:Name="TemperaturaLabel"
                           FontSize="48"
                           TextColor="White"
                           HorizontalOptions="Center" />

                    <Label x:Name="DescricaoLabel"
                           FontSize="18"
                           TextColor="#B0BEC5"
                           HorizontalOptions="Center" />

                    <Label x:Name="SensacaoLabel"
                           TextColor="#B0BEC5"
                           FontSize="14"
                           HorizontalOptions="Center" />

                    <Label x:Name="MinMaxLabel"
                           TextColor="#B0BEC5"
                           FontSize="14"
                           HorizontalOptions="Center" />

                    <Label x:Name="UmidadeLabel"
                           TextColor="#B0BEC5"
                           FontSize="14"
                           HorizontalOptions="Center" />

                    <Label x:Name="VentoLabel"
                           TextColor="#B0BEC5"
                           FontSize="14"
                           HorizontalOptions="Center" />

                    <Label x:Name="VisibilidadeLabel"
                           TextColor="#B0BEC5"
                           FontSize="14"
                           HorizontalOptions="Center" />

                    <Label x:Name="SolLabel"
                           TextColor="#FFCC80"
                           FontSize="14"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>

            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
